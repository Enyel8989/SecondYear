  <head>
    <meta charset="utf-8">
    <title>Ejercicios</title>
  </head>
  <body>
    <script>
      function ejercicioUno(a, b, operation){
         switch (operation) {
          case "suma":
            return console.log(a+b);

          case "resta":
            return console.log(a-b);

          case "multiplicacion":
            return console.log(a * b);

          case "division":
            return console.log(a / b);

          default:
            console.error(`La operacion ${operation}no es valida!!`);



            }
      }
        ejercicioUno(12, 5, "multiplicacion")
    </script>

  </body>
</html>
